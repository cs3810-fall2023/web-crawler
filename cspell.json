{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "enabledLanguageIds": [
    "csharp",
    "diff",
    "go",
    "html",
    "css",
    "javascript",
    "json",
    "jsonc",
    "lua",
    "makefile",
    "markdown",
    "php",
    "plaintext",
    "python",
    "xml",
    "yaml",
    "toml"
  ],
  "ignorePaths": [
    ".eslintignore",
    ".git",
    ".gitattributes",
    ".gitignore",
    ".github/integrations.json",
    ".pnp.{js,cjs}",
    ".prettierignore",
    ".yarn",
    "*.{png,jpg,pdf,svg}",
    "*.cpuprofile",
    "*.heapprofile",
    "**/.docusaurus/**",
    "**/.gitignore",
    "**/.vscode/**",
    "**/{cspell.*,cSpell.*,.cspell.*,cspell.config.*}",
    "**/*.schema.json",
    "**/*.snap",
    "**/*.trie",
    "**/coverage/**",
    "**/dist/**",
    "**/jest.config.js",
    "**/node_modules/**",
    "**/tsconfig.json",
    "/cspell-dict.txt",
    "/cspell-ignore-words.txt",
    "/cspell-forbidden-words.txt",
    "/ignore-words.txt",
    "/forbidden-words.txt",
    "/docs/docsV2/**",
    "/docs/types/cspell-types",
    "/.cspell",
    "cspell*.{json,yaml}",
    "integration-tests/config/config.json",
    "integration-tests/config/repositories/**",
    "integration-tests/repositories/**",
    "integration-tests/snapshots/**",
    "lcov.info",
    "lib-bundled",
    "package.json",
    "*-lock.{json,yaml}",
    "packages/*/fixtures/**",
    "packages/*/samples/**",
    "packages/Samples/**",
    "packages/cspell-lib/fixtures/**",
    "temp",
    "test-fixtures/**",
    "test-packages/*/test-cspell-eslint-plugin/**",
    "test-packages/examples/example-cspell-lib-single-doc/samples/**",
    "test-packages/*/test-cspell-tools/src/*.txt"
  ],
  "useGitignore": true,
  "flagWords": [],
  "ignoreWords": ["waka", "commitcomment"],
  "words": [],
  "features": {
    "weighted-suggestions": true
  },
  "dictionaryDefinitions": [
    {
      "name": "workspace",
      "path": "./cspell-dict.txt",
      "description": "Custom workspace dictionary",
      "addWords": true
    },
    {
      "name": "forbidden words",
      "path": "~/.cspell/forbidden-words.txt",
      "description": "Words that are Forbidden",
      "addWords": true,
      "noSuggest": true
    },
    {
      "name": "ignore words",
      "path": "~/cspell/ignore-words.txt",
      "description": "Word to be Ignored",
      "addWords": true,
      "noSuggest": true
    }
  ],
  "dictionaries": ["workspace", "forbidden words", "ignore words"]
}
